{
  "name": "novacast-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "build": "./scripts/build.sh",
    "build:start": "npm run build && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:unit": "jest --testPathPatterns='controllers.*test\\.ts$'",
    "test:integration": "jest --testPathPatterns='integration\\.test\\.ts$'",
    "test:performance": "jest --testPathPatterns='performance\\.test\\.ts$' --testTimeout=60000",
    "test:auth": "jest --testPathPatterns='auth.*test\\.ts$'",
    "test:health": "jest --testPathPatterns='health.*test\\.ts$'",
    "test:validation": "jest --testPathPatterns='user-validation.*test\\.ts$'",
    "test:basic": "jest --testPathPatterns='basic\\.test\\.ts$'",
    "test:setup": "./scripts/setup-test-db.sh",
    "test:all": "./scripts/run-tests.sh",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix --no-warn-ignored",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t novacast-backend .",
    "docker:dev": "docker-compose up -d postgres-dev && docker-compose up backend-dev",
    "docker:prod": "docker-compose --profile production up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:down": "docker-compose down -v",
    "act:test": "act -j test",
    "act:all": "act",
    "act:quality": "act -j quality",
    "act:build": "act -j build",
    "ci:local": "npm run act:all",
    "ci:test-only": "npm run act:test",
    "prepare:act": "cp .secrets.example .secrets && echo 'Edit .secrets file with your values'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "kafka-node": "^5.0.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "redis": "^5.8.1",
    "socket.io": "^4.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
